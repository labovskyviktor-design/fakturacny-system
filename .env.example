# Fakturačný systém - Konfigurácia prostredia
# Skopírujte tento súbor ako .env a upravte hodnoty

# Flask konfigurácia
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-secret-key-change-this-in-production

# Databáza
# Pre SQLite (default):
DATABASE_URL=sqlite:///instance/fakturacny_system.db

# Pre PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/fakturacny_system

# Server konfigurácia
HOST=0.0.0.0
PORT=5000
DEBUG=False

# API Keys (voliteľné)
# EKOSYSTEM_API_KEY=your-api-key-here

# Email konfigurácia (pre budúce rozšírenia)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Session konfigurácia
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Rate limiting (pre API)
RATELIMIT_ENABLED=True
RATELIMIT_STORAGE_URL=memory://
