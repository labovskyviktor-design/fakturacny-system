# Fakturačný systém - Konfigurácia prostredia
# Skopírujte tento súbor ako .env a doplňte údaje

# Flask nastavenia
SECRET_KEY=dev-secret-key-zmente-v-produkcii
FLASK_APP=app.py
FLASK_ENV=development

# Databáza (Supabase PostgreSQL)
# Získajte connection string z Supabase Dashboard → Project Settings → Database
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxxx.supabase.co:5432/postgres

# Emailing (SendGrid)
SENDGRID_API_KEY=SG.your_api_key_here
MAIL_DEFAULT_SENDER=vas-email@domena.sk

# Funkcionalita
ENABLE_QR_CODES=True
LOG_LEVEL=DEBUG
